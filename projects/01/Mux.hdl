/**
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=Notsel);
    And(a=sel, b=b, out=w1);
    And(a=a, b=Notsel, out=w2);
    Or(a=w1, b=w2, out=out);
}
